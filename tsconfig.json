{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "removeComments": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": "src",
      "pretty": true,
      "paths": {
        "@utils": ["Utils/index"],
        "@api": ["API"],
        "@db": ["DB"]
    },
  },
  "include": [
      "src/**/*"
  ]
}